local OutfitsTab = Window:CreateTab({ Name = "Outfits", Icon = "rbxassetid://7072718362" })

OutfitsTab:CreateSection("เปลี่ยนชุดตัวละคร")

-- ฟังก์ชัน applyOutfit1, applyOutfit2, ... (copy มาจากสคริปต์เดิมของคุณ)
-- เพื่อความสั้น ผมใส่แค่ตัวอย่าง 1 ชุด คุณ copy ฟังก์ชัน applyOutfit อื่น ๆ มาต่อได้เลย

local function applyOutfit1()
    pcall(function()
        game.ReplicatedStorage.CatalogGuiRemote:InvokeServer({ /* โค้ดชุด 1 ของคุณ */ })
    end)
    print("ใส่ชุด 1 แล้ว")
end

OutfitsTab:CreateButton({ Name = "ใส่ชุด 1", Callback = applyOutfit1 })

-- เพิ่มปุ่มชุดอื่น ๆ ตามเดิม เช่น
-- OutfitsTab:CreateButton({ Name = "ใส่ชุด 2", Callback = applyOutfit2 })
