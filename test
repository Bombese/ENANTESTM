-- OutfitsTab:CreateButton({ Name = "ใส่ชุด 5", Callback = applyOutfit5 })

OutfitsTab:CreateButton({
    Name = "Reset Character (แก้บัคชุด)",
    Callback = function()
        if game.Players.LocalPlayer.Character then
            game.Players.LocalPlayer.Character:BreakJoints()
        end
    end
})

-- =============================================
-- Tab: Firefly
-- =============================================
local FireflyTab = Window:CreateTab({ Name = "Firefly", Icon = "rbxassetid://7072721035" })

FireflyTab:CreateSection("Firefly Spawner")

local fireflyCount = 100
local stopActions = false

local function spawnFireflies(amount)
    local tool = game.Players.LocalPlayer.Backpack:FindFirstChild("Fireflies") or game.Players.LocalPlayer.Character:FindFirstChild("Fireflies")
    if not tool then print("ไม่พบ Fireflies") return end
    local remote = tool:FindFirstChild("RemoteEvent")
    if not remote then print("ไม่พบ Remote") return end

    stopActions = false
    for i = 1, amount do
        if stopActions then break end
        pcall(function() remote:FireServer() end)
        if i % 100 == 0 then task.wait() end
    end
end

FireflyTab:CreateInput({
    Name = "จำนวน Fireflies",
    Placeholder = "เช่น 500",
    Callback = function(text)
        local n = tonumber(text)
        if n and n > 0 then fireflyCount = n end
    end
})

FireflyTab:CreateButton({
    Name = "เสก Fireflies",
    Callback = function() spawnFireflies(fireflyCount) end
})

FireflyTab:CreateButton({
    Name = "หยุดเสก",
    Callback = function() stopActions = true end
})

FireflyTab:CreateButton({
    Name = "ล้าง Fireflies ทั้งหมด",
    Callback = function()
        local c = 0
        for _, v in workspace:GetDescendants() do
            if v.Name:lower():find("firefly") then v:Destroy() c += 1 end
        end
        print("ล้างแล้ว " .. c .. " ตัว")
    end
})

-- =============================================
-- Tab: Background
-- =============================================
local BgTab = Window:CreateTab({ Name = "Background", Icon = "rbxassetid://7072714792" })

local bgGui

local function SetupBackground()
    -- copy ฟังก์ชัน setupBackground() เดิมของคุณมาที่นี่
    -- แล้วเก็บไว้ใน bgGui
end

BgTab:CreateButton({
    Name = "สร้าง/รีเซ็ตพื้นหลัง",
    Callback = function()
        if bgGui then bgGui:Destroy() end
        bgGui = SetupBackground()
    end
})

BgTab:CreateToggle({
    Name = "แสดงพื้นหลัง",
    Default = true,
    Callback = function(v)
        if bgGui then bgGui.Enabled = v end
    end
})

